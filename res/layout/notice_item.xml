<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/news_item"
    android:paddingBottom="5dp"
    android:paddingLeft="20dp"
    android:paddingTop="35dp" >

    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iconView" >

        <TextView
            android:id="@+id/titleView"
            style="@style/item_style"
            android:text="title"
            android:textColor="@color/juhong" />

        <TextView
            android:id="@+id/bodyView"
            style="@style/item_style"
            android:layout_below="@+id/titleView"
            android:layout_marginRight="5dp"
            android:text="bodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybody"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/timeStampView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bodyView"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:text="time"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fromview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bodyView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/timeStampView"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iconView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:visibility="gone" >
    </ImageView>

</RelativeLayout>