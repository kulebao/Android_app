<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/cook_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/timeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cook_title"
            android:paddingLeft="10dp" >

            <TextView
                android:id="@+id/weekView"
                style="@style/item_style"
                android:layout_centerVertical="true"
                android:text="星期二"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/dateView"
                style="@style/item_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/weekView"
                android:text="11月23号"
                android:textColor="@color/black"
                android:textStyle="normal" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/firstLayout"
            android:layout_width="fill_parent"
            android:layout_height="100dp" >

            <ImageView
                android:id="@+id/imgdemo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/breakfast" />

            <TextView
                android:id="@+id/breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgdemo"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imgdemo"
                android:text="@string/breakfast"
                android:textColor="@color/juhong"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/firstcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/breakfast"
                android:layout_below="@+id/breakfast"
                android:layout_marginTop="6dp"
                android:text="鸡蛋馒头,稀饭包子"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="monospace" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/secondLayout"
            android:layout_width="fill_parent"
            android:layout_height="100dp" >

            <ImageView
                android:id="@+id/imgdemo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/lunch" />

            <TextView
                android:id="@+id/breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgdemo"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imgdemo"
                android:text="@string/lunch"
                android:textColor="#CC6600"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/secondcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/breakfast"
                android:layout_below="@+id/breakfast"
                android:layout_marginTop="6dp"
                android:text="鸡蛋馒头,稀饭包子"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="monospace" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/thirdLayout"
            android:layout_width="fill_parent"
            android:layout_height="100dp" >

            <ImageView
                android:id="@+id/imgdemo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/extra_lunch" />

            <TextView
                android:id="@+id/breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgdemo"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imgdemo"
                android:text="@string/extralunch"
                android:textColor="#CC6600"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/thirdcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/breakfast"
                android:layout_below="@+id/breakfast"
                android:layout_marginTop="6dp"
                android:text="鸡蛋馒头,稀饭包子"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="monospace" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/forthLayout"
            android:layout_width="fill_parent"
            android:layout_height="100dp" >

            <ImageView
                android:id="@+id/imgdemo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/dinner" />

            <TextView
                android:id="@+id/breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgdemo"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imgdemo"
                android:text="@string/dinner"
                android:textColor="#CC6600"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fouthcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/breakfast"
                android:layout_below="@+id/breakfast"
                android:layout_marginTop="6dp"
                android:text="鸡蛋馒头,稀饭包子"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="monospace" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>