<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" >

        <TextView
        android:layout_centerHorizontal="true"
            android:id="@+id/timestamp"
            style="@style/item_style"
            android:text="2014-12-3 22:45"
            android:textColor="@color/juhong"
            android:textSize="14sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/headicon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/chat_head_icon" />

        <TextView
            android:id="@+id/sender"
            style="@style/item_style"
            android:layout_alignTop="@+id/headicon"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/headicon"
            android:text="title"
            android:textColor="@color/juhong"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sender"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/headicon"
            android:background="@drawable/chat_content" >

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/chat_max_width"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:text="time"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/chat_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_icon"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/resend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/content"
            android:layout_toRightOf="@+id/content"
            android:src="@drawable/resend_normal"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>